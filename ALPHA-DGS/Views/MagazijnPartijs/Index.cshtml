@model IEnumerable<ALPHA_DGS.Models.MagazijnPartij>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<style>
    table {
        position: relative;
        border: 1px solid #ddd;
        border-collapse: collapse;
    }

    td, th {
        white-space: nowrap;
        border: 1px solid #ddd;
        padding: 10px;
        text-align: center;
    }

    th {
        background-color: #eee;
        position: sticky;
        top: -1px;
        z-index: 2;
    }

   

    .column {
        display: inline-block;
        max-width: 200px;
    }

    .block {
        border: 1px solid #ddd;
        max-width: 200px;
        padding: 10px;
    }

    &:first-of-type {
         left: 0;
         z-index: 3;
     }

    tbody tr td:first-of-type {
        background-color: #eee;
        position: sticky;
        left: -1px;
        text-align: left;
    }
</style>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pvan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ptot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PHerk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VpNaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stadium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uitserie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AantFust)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Magazijn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pvan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ptot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PHerk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VpNaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stadium.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uitserie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AantFust)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Magazijn.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
