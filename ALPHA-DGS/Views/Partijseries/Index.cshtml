@model IEnumerable<ALPHA_DGS.Models.Partijserie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<style>
    table {
        position: relative;
        border: 1px solid #ddd;
        border-collapse: collapse;
    }

    td, th {
        white-space: nowrap;
        border: 1px solid #ddd;
        padding: 10px;
        text-align: center;
    }

    th {
        background-color: #eee;
        position: sticky;
        top: -1px;
        z-index: 2;
    }

   

    .column {
        display: inline-block;
        max-width: 200px;
    }

    .block {
        border: 1px solid #ddd;
        max-width: 200px;
        padding: 10px;
    }

    &:first-of-type {
        left: 0;
        z-index: 3;
    }

    tbody tr td:first-of-type {
        background-color: #eee;
        position: sticky;
        left: -1px;
        text-align: left;
    }
</style>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    <a asp-action="CreateMore">Meer Invoer</a>
</p>

@{ int i = 1; }
<div>
    <div>
        @foreach (var item in Model)
        {
            if (i > 0 && i % 6 == 1)
            {
                // close the div and start again
            @:</div><div class="column">
            }
            <div class="block">@item.PsVan</div>
            <div class="block">@item.PsTot</div>
            i++;
        }
    </div>
</div>