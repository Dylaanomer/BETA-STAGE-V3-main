@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SigninManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SigninManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" href="#"> Hallo, Welkom @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" method="post" class="form-inline" asp-controller="Account" asp-action="LogOff">
                <button type="submit" class="btn btn-link">Logout</button>
            </form>
        </li>

    }
    else
    {


    
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register">Aanmelden</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Login">Inloggen</a>
    </li>
   
    
    
   }


</ul>